{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gloss",
  "version": "0.1.0",
  "identifier": "com.gloss.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Gloss",
        "width": 420,
        "height": 600,
        "fullscreen": false,
        "resizable": true,
        "maximized": false,
        "focus": true,
        "minimizable": true,
        "transparent": true,
        "decorations": true,
        "visible": true,
        "center": true,
        "windowEffects": {
          "effects": [
            "acrylic"
          ]
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/wordnet.json"
    ],
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "type": "skip"
      },
      "wix": null
    }
  }
}
